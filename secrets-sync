#!/bin/bash
# Universal Secrets Sync Manager
# Author: Maxim
# Description: Sync ~/.secrets/ directory across multiple machines
# Usage: secrets-sync [OPTIONS]

set -e

# ============================================================================
# Configuration
# ============================================================================

SECRETS_DIR="$HOME/.secrets"
CONFIG_FILE="$HOME/.config/secrets-sync/machines.conf"
VERSION="1.0.0"

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
MAGENTA='\033[0;35m'
CYAN='\033[0;36m'
NC='\033[0m' # No Color

# ============================================================================
# Functions
# ============================================================================

print_header() {
    echo -e "${CYAN}â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—${NC}"
    echo -e "${CYAN}â•‘${NC}          ${MAGENTA}ğŸ” Universal Secrets Sync Manager${NC}              ${CYAN}â•‘${NC}"
    echo -e "${CYAN}â•‘${NC}                    Version $VERSION                       ${CYAN}â•‘${NC}"
    echo -e "${CYAN}â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${NC}"
    echo ""
}

check_secrets_dir() {
    if [ ! -d "$SECRETS_DIR" ]; then
        echo -e "${RED}âœ—${NC} Secrets directory not found: $SECRETS_DIR"
        echo ""
        read -p "Create it now? (y/n): " create
        if [ "$create" = "y" ]; then
            mkdir -p "$SECRETS_DIR"
            chmod 700 "$SECRETS_DIR"
            echo -e "${GREEN}âœ“${NC} Created: $SECRETS_DIR"
        else
            exit 1
        fi
    fi
}

load_config() {
    if [ ! -f "$CONFIG_FILE" ]; then
        echo -e "${YELLOW}âš ${NC} Configuration file not found: $CONFIG_FILE"
        echo ""
        create_default_config
    fi
    
    # Load machines from config
    MACHINES=()
    while IFS='|' read -r name user host; do
        # Skip comments and empty lines
        [[ "$name" =~ ^#.*$ ]] && continue
        [[ -z "$name" ]] && continue
        MACHINES+=("$name|$user|$host")
    done < "$CONFIG_FILE"
}

create_default_config() {
    echo "Creating default configuration..."
    mkdir -p "$(dirname "$CONFIG_FILE")"
    
    cat > "$CONFIG_FILE" << 'EOF'
# Secrets Sync - Machine Configuration
# Format: NAME|USER|HOST
# Example: VPS|root|192.168.1.100

# Your machines (uncomment and configure):
# SWC|maxim|192.168.1.10
MWC2|maxim|192.168.1.20
MWC3|maxim|192.168.1.30
VPS|root|46.62.165.153

# Add more machines as needed
EOF
    
    echo -e "${GREEN}âœ“${NC} Created config file: $CONFIG_FILE"
    echo ""
    echo -e "${YELLOW}â„¹${NC} Please edit the configuration file and update machine details:"
    echo "   nano $CONFIG_FILE"
    echo ""
    read -p "Press Enter to continue..."
}

show_machines() {
    echo -e "${BLUE}ğŸ“‹ Configured Machines:${NC}"
    echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
    
    if [ ${#MACHINES[@]} -eq 0 ]; then
        echo -e "${YELLOW}  No machines configured${NC}"
        echo ""
        echo "  Edit: $CONFIG_FILE"
        return 1
    fi
    
    local i=1
    for machine in "${MACHINES[@]}"; do
        IFS='|' read -r name user host <<< "$machine"
        printf "  ${GREEN}%d)${NC} %-10s ${CYAN}%s@%s${NC}\n" "$i" "$name" "$user" "$host"
        ((i++))
    done
    echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
    echo ""
}

select_machine() {
    show_machines || return 1
    
    echo "Select target machine:"
    read -p "Choice [1-${#MACHINES[@]}] or 'a' for all: " choice
    
    if [ "$choice" = "a" ]; then
        SELECTED_MACHINES=("${MACHINES[@]}")
    elif [[ "$choice" =~ ^[0-9]+$ ]] && [ "$choice" -ge 1 ] && [ "$choice" -le "${#MACHINES[@]}" ]; then
        SELECTED_MACHINES=("${MACHINES[$((choice-1))]}")
    else
        echo -e "${RED}âœ—${NC} Invalid choice"
        return 1
    fi
}

sync_to_machine() {
    local machine=$1
    local dry_run=$2
    
    IFS='|' read -r name user host <<< "$machine"
    
    echo ""
    echo -e "${BLUE}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"
    echo -e "${CYAN}ğŸ“¤ Syncing to: ${GREEN}$name${NC} (${user}@${host})"
    echo -e "${BLUE}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"
    
    # Build rsync command
    local rsync_opts="-avz --progress"
    if [ "$dry_run" = "true" ]; then
        rsync_opts="$rsync_opts --dry-run"
        echo -e "${YELLOW}â„¹${NC} DRY RUN MODE - No files will be modified"
        echo ""
    fi
    
    # Execute rsync
    if rsync $rsync_opts "$SECRETS_DIR/" "${user}@${host}:$SECRETS_DIR/"; then
        if [ "$dry_run" != "true" ]; then
            echo ""
            echo -e "${GREEN}âœ“${NC} Successfully synced to $name"
        fi
    else
        echo ""
        echo -e "${RED}âœ—${NC} Failed to sync to $name"
        return 1
    fi
}

sync_from_machine() {
    local machine=$1
    local dry_run=$2
    
    IFS='|' read -r name user host <<< "$machine"
    
    echo ""
    echo -e "${BLUE}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"
    echo -e "${CYAN}ğŸ“¥ Syncing from: ${GREEN}$name${NC} (${user}@${host})"
    echo -e "${BLUE}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"
    
    # Build rsync command
    local rsync_opts="-avz --progress"
    if [ "$dry_run" = "true" ]; then
        rsync_opts="$rsync_opts --dry-run"
        echo -e "${YELLOW}â„¹${NC} DRY RUN MODE - No files will be modified"
        echo ""
    fi
    
    # Execute rsync
    if rsync $rsync_opts "${user}@${host}:$SECRETS_DIR/" "$SECRETS_DIR/"; then
        if [ "$dry_run" != "true" ]; then
            echo ""
            echo -e "${GREEN}âœ“${NC} Successfully synced from $name"
        fi
    else
        echo ""
        echo -e "${RED}âœ—${NC} Failed to sync from $name"
        return 1
    fi
}

interactive_mode() {
    print_header
    check_secrets_dir
    load_config
    
    while true; do
        echo ""
        echo -e "${MAGENTA}â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—${NC}"
        echo -e "${MAGENTA}â•‘${NC}                      Main Menu                             ${MAGENTA}â•‘${NC}"
        echo -e "${MAGENTA}â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${NC}"
        echo ""
        echo "  1) Push secrets (This machine â†’ Remote)"
        echo "  2) Pull secrets (Remote â†’ This machine)"
        echo "  3) Dry run (Preview changes)"
        echo "  4) Show configured machines"
        echo "  5) Edit configuration"
        echo "  6) Exit"
        echo ""
        read -p "Choice [1-6]: " menu_choice
        
        case $menu_choice in
            1)
                select_machine && {
                    for machine in "${SELECTED_MACHINES[@]}"; do
                        sync_to_machine "$machine" "false"
                    done
                }
                ;;
            2)
                select_machine && {
                    if [ ${#SELECTED_MACHINES[@]} -gt 1 ]; then
                        echo -e "${RED}âœ—${NC} Pull mode only supports single machine selection"
                    else
                        sync_from_machine "${SELECTED_MACHINES[0]}" "false"
                    fi
                }
                ;;
            3)
                select_machine && {
                    echo ""
                    echo "Dry run direction:"
                    echo "  1) Push (This â†’ Remote)"
                    echo "  2) Pull (Remote â†’ This)"
                    read -p "Choice [1-2]: " dry_choice
                    
                    case $dry_choice in
                        1)
                            for machine in "${SELECTED_MACHINES[@]}"; do
                                sync_to_machine "$machine" "true"
                            done
                            ;;
                        2)
                            if [ ${#SELECTED_MACHINES[@]} -gt 1 ]; then
                                echo -e "${RED}âœ—${NC} Pull mode only supports single machine"
                            else
                                sync_from_machine "${SELECTED_MACHINES[0]}" "true"
                            fi
                            ;;
                    esac
                }
                ;;
            4)
                show_machines
                read -p "Press Enter to continue..."
                ;;
            5)
                ${EDITOR:-nano} "$CONFIG_FILE"
                load_config
                ;;
            6)
                echo ""
                echo "Goodbye! ğŸ‘‹"
                exit 0
                ;;
            *)
                echo -e "${RED}âœ—${NC} Invalid choice"
                ;;
        esac
    done
}

show_help() {
    cat << EOF
Universal Secrets Sync Manager v$VERSION

USAGE:
    secrets-sync [OPTIONS]

OPTIONS:
    -h, --help              Show this help message
    -v, --version           Show version
    -i, --interactive       Interactive mode (default)
    -p, --push MACHINE      Push secrets to MACHINE
    -P, --pull MACHINE      Pull secrets from MACHINE
    -a, --push-all          Push secrets to all configured machines
    -d, --dry-run           Dry run mode (preview changes)
    -c, --config            Edit configuration file

EXAMPLES:
    secrets-sync                    # Interactive mode
    secrets-sync --push VPS         # Push to VPS
    secrets-sync --pull MWC2        # Pull from MWC2
    secrets-sync --push-all         # Push to all machines
    secrets-sync --dry-run --push VPS  # Preview push to VPS

CONFIGURATION:
    Config file: $CONFIG_FILE
    Secrets dir: $SECRETS_DIR

MACHINES:
    Configure machines in: $CONFIG_FILE
    Format: NAME|USER|HOST

EOF
}

# ============================================================================
# Main
# ============================================================================

# Parse command line arguments
if [ $# -eq 0 ]; then
    interactive_mode
    exit 0
fi

while [[ $# -gt 0 ]]; do
    case $1 in
        -h|--help)
            show_help
            exit 0
            ;;
        -v|--version)
            echo "secrets-sync version $VERSION"
            exit 0
            ;;
        -i|--interactive)
            interactive_mode
            exit 0
            ;;
        -c|--config)
            ${EDITOR:-nano} "$CONFIG_FILE"
            exit 0
            ;;
        *)
            echo "Unknown option: $1"
            echo "Use --help for usage information"
            exit 1
            ;;
    esac
    shift
done
